# InspireCodex API Environment Configuration
# Copy this file to .env and fill in your values

# Environment: development | production
NODE_ENV=development

# Server Configuration
PORT=3100
HOST=0.0.0.0

# ================================================
# DATABASE CONFIGURATION - DEVELOPMENT
# ================================================

# Codex Database (Identity & Configuration)
CODEX_DB_HOST=localhost
CODEX_DB_PORT=5432
CODEX_DB_NAME=Codex
CODEX_DB_USER=guardian
CODEX_DB_PASSWORD=your_password_here

# Inspire Database (Ministry Content)
INSPIRE_DB_HOST=localhost
INSPIRE_DB_PORT=5432
INSPIRE_DB_NAME=Inspire
INSPIRE_DB_USER=guardian
INSPIRE_DB_PASSWORD=your_password_here

# ================================================
# DATABASE CONFIGURATION - PRODUCTION
# (Used when NODE_ENV=production)
# ================================================

# Production Codex Database
PROD_CODEX_DB_HOST=your_production_host
PROD_CODEX_DB_PORT=5432
PROD_CODEX_DB_NAME=Codex
PROD_CODEX_DB_USER=codex_prod_user
PROD_CODEX_DB_PASSWORD=your_production_password

# Production Inspire Database
PROD_INSPIRE_DB_HOST=your_production_host
PROD_INSPIRE_DB_PORT=5432
PROD_INSPIRE_DB_NAME=Inspire
PROD_INSPIRE_DB_USER=inspire_prod_user
PROD_INSPIRE_DB_PASSWORD=your_production_password

# ================================================
# LEGACY DATABASE (Read-only after migration)
# ================================================
LEGACY_DB_HOST=localhost
LEGACY_DB_PORT=5432
LEGACY_DB_NAME=JubileeVerse
LEGACY_DB_USER=guardian
LEGACY_DB_PASSWORD=your_password_here
LEGACY_DB_ENABLED=false

# ================================================
# API SECURITY
# ================================================
API_KEY_SECRET=your_api_key_secret_here
JWT_SECRET=your_jwt_secret_here
CORS_ORIGINS=http://localhost:3000,http://localhost:3100

# ================================================
# RATE LIMITING
# ================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================================
# LOGGING
# ================================================
LOG_LEVEL=debug
