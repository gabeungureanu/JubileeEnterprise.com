<UserControl x:Class="JubileeVibes.Views.Pages.AlbumView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             mc:Ignorable="d"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with gradient background -->
        <Grid Grid.Row="0" Height="340">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#505050" Offset="0"/>
                    <GradientStop Color="#181818" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid Margin="32,48,32,24" VerticalAlignment="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="232"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Width="232" Height="232"
                        CornerRadius="4"
                        Background="{StaticResource BackgroundTertiaryBrush}">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="32" ShadowDepth="8" Opacity="0.4" Color="Black"/>
                    </Border.Effect>
                    <Image Source="{Binding Album.CoverArtUrl}" Stretch="UniformToFill"/>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Bottom" Margin="24,0,0,0">
                    <TextBlock Text="{Binding Album.TypeAndYear}"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               FontSize="12" FontWeight="Bold"
                               Typography.Capitals="AllSmallCaps"/>
                    <TextBlock Text="{Binding Album.Title}"
                               Style="{StaticResource HeadingXLarge}"
                               Margin="0,8,0,16"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Album.ArtistName}"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   FontWeight="SemiBold"
                                   Cursor="Hand">
                            <TextBlock.InputBindings>
                                <MouseBinding MouseAction="LeftClick"
                                              Command="{Binding NavigateToArtistCommand}"/>
                            </TextBlock.InputBindings>
                        </TextBlock>
                        <TextBlock Foreground="{StaticResource TextSecondaryBrush}" Margin="8,0,0,0">
                            <Run Text="{Binding Album.ReleaseYear, Mode=OneWay}"/>
                            <Run Text=" - "/>
                            <Run Text="{Binding Tracks.Count, Mode=OneWay}"/>
                            <Run Text=" songs"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Actions + Track List -->
        <Grid Grid.Row="1" Background="{StaticResource BackgroundSecondaryBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="32,24">
                <Button Style="{StaticResource LargePlayButtonStyle}"
                        Command="{Binding PlayAllCommand}">
                    <Path Data="{StaticResource PlayIcon}"
                          Fill="{StaticResource BackgroundPrimaryBrush}"
                          Width="24" Height="24" Stretch="Uniform"/>
                </Button>
                <ToggleButton Style="{StaticResource ToggleIconButtonStyle}"
                              IsChecked="{Binding IsSaved}"
                              Command="{Binding ToggleSaveCommand}"
                              Margin="24,0" Width="32" Height="32">
                    <Path Data="{StaticResource HeartOutlineIcon}"
                          Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}"
                          Width="24" Height="24" Stretch="Uniform"/>
                </ToggleButton>
            </StackPanel>

            <ScrollViewer Grid.Row="1" Style="{StaticResource VibesScrollViewerStyle}">
                <ItemsControl ItemsSource="{Binding Tracks}" Margin="32,0,32,32">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Height="56" Background="Transparent" Cursor="Hand" Margin="0,0,0,4"
                                    CornerRadius="4">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource BackgroundHoverBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftDoubleClick"
                                                  Command="{Binding DataContext.PlayTrackCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  CommandParameter="{Binding}"/>
                                </Border.InputBindings>
                                <Grid Margin="16,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="{Binding TrackNumber}"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>

                                    <TextBlock Grid.Column="1"
                                               Text="{Binding Title}"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               VerticalAlignment="Center"/>

                                    <ToggleButton Grid.Column="2"
                                                  Style="{StaticResource ToggleIconButtonStyle}"
                                                  IsChecked="{Binding IsLiked}"
                                                  Visibility="Hidden">
                                        <Path Data="{StaticResource HeartOutlineIcon}"
                                              Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}"
                                              Width="16" Height="16" Stretch="Uniform"/>
                                    </ToggleButton>

                                    <TextBlock Grid.Column="3"
                                               Text="{Binding DurationFormatted}"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
