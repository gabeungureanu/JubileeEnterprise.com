<UserControl x:Class="JubileeVibes.Views.Pages.SearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search Header -->
        <Grid Grid.Row="0" Margin="32,24,32,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Search Icon -->
            <Path Grid.Column="0"
                  Data="{StaticResource SearchIcon}"
                  Fill="{StaticResource TextSecondaryBrush}"
                  Width="24" Height="24"
                  Stretch="Uniform"
                  VerticalAlignment="Center"
                  Margin="12,0"/>

            <!-- Search Input -->
            <TextBox Grid.Column="1"
                     Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource SearchBoxStyle}"
                     MaxWidth="400"
                     HorizontalAlignment="Left"/>
        </Grid>

        <!-- Content Area -->
        <ScrollViewer Grid.Row="1"
                      Style="{StaticResource VibesScrollViewerStyle}"
                      VerticalScrollBarVisibility="Auto">
            <Grid Margin="32,0">

                <!-- Browse Categories (when no search) -->
                <StackPanel Visibility="{Binding HasResults, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <TextBlock Text="Browse all"
                               Style="{StaticResource HeadingMedium}"
                               Margin="0,0,0,16"/>

                    <ItemsControl ItemsSource="{Binding Categories}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="180" Height="100"
                                        CornerRadius="8"
                                        Margin="0,0,16,16"
                                        Cursor="Hand">
                                    <Border.Background>
                                        <SolidColorBrush Color="{Binding Color}"/>
                                    </Border.Background>
                                    <TextBlock Text="{Binding Name}"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               FontWeight="Bold"
                                               FontSize="18"
                                               Margin="16"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Search Results -->
                <StackPanel Visibility="{Binding HasResults, Converter={StaticResource BoolToVisibilityConverter}}">

                    <!-- Filter Tabs -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                        <RadioButton Content="All" GroupName="Filter"
                                     IsChecked="{Binding SelectedFilter, Converter={StaticResource StringToBoolConverter}, ConverterParameter=all}"
                                     Command="{Binding SetFilterCommand}" CommandParameter="all"
                                     Style="{StaticResource FilterRadioButtonStyle}"/>
                        <RadioButton Content="Tracks" GroupName="Filter"
                                     IsChecked="{Binding SelectedFilter, Converter={StaticResource StringToBoolConverter}, ConverterParameter=tracks}"
                                     Command="{Binding SetFilterCommand}" CommandParameter="tracks"
                                     Style="{StaticResource FilterRadioButtonStyle}"/>
                        <RadioButton Content="Albums" GroupName="Filter"
                                     IsChecked="{Binding SelectedFilter, Converter={StaticResource StringToBoolConverter}, ConverterParameter=albums}"
                                     Command="{Binding SetFilterCommand}" CommandParameter="albums"
                                     Style="{StaticResource FilterRadioButtonStyle}"/>
                        <RadioButton Content="Artists" GroupName="Filter"
                                     IsChecked="{Binding SelectedFilter, Converter={StaticResource StringToBoolConverter}, ConverterParameter=artists}"
                                     Command="{Binding SetFilterCommand}" CommandParameter="artists"
                                     Style="{StaticResource FilterRadioButtonStyle}"/>
                    </StackPanel>

                    <!-- Tracks Results -->
                    <StackPanel Visibility="{Binding Tracks.Count, Converter={StaticResource CountToVisibilityConverter}, Mode=OneWay}"
                                Margin="0,0,0,32">
                        <TextBlock Text="Songs" Style="{StaticResource HeadingSmall}" Margin="0,0,0,16"/>
                        <ItemsControl ItemsSource="{Binding Tracks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Height="56" Background="Transparent" Cursor="Hand"
                                            Margin="0,0,0,4">
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftDoubleClick"
                                                          Command="{Binding DataContext.PlayTrackCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                          CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="56"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" Width="40" Height="40"
                                                    CornerRadius="4"
                                                    Background="{StaticResource BackgroundTertiaryBrush}">
                                                <Image Source="{Binding AlbumArtUrl}" Stretch="UniformToFill"/>
                                            </Border>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0">
                                                <TextBlock Text="{Binding Title}"
                                                           Foreground="{StaticResource TextPrimaryBrush}"
                                                           FontSize="14"/>
                                                <TextBlock Text="{Binding ArtistName}"
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           FontSize="12"/>
                                            </StackPanel>

                                            <TextBlock Grid.Column="2" Text="{Binding DurationFormatted}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Albums Results -->
                    <StackPanel Visibility="{Binding Albums.Count, Converter={StaticResource CountToVisibilityConverter}, Mode=OneWay}"
                                Margin="0,0,0,32">
                        <TextBlock Text="Albums" Style="{StaticResource HeadingSmall}" Margin="0,0,0,16"/>
                        <ItemsControl ItemsSource="{Binding Albums}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource CardBackgroundBrush}"
                                            CornerRadius="8" Padding="16" Width="180"
                                            Margin="0,0,16,16" Cursor="Hand">
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick"
                                                          Command="{Binding DataContext.NavigateToAlbumCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                          CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        <StackPanel>
                                            <Border Width="148" Height="148" CornerRadius="4"
                                                    Background="{StaticResource BackgroundTertiaryBrush}">
                                                <Image Source="{Binding CoverArtUrl}" Stretch="UniformToFill"/>
                                            </Border>
                                            <TextBlock Text="{Binding Title}"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       FontWeight="SemiBold" FontSize="14"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,12,0,4"/>
                                            <TextBlock Text="{Binding ArtistName}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       FontSize="12"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Artists Results -->
                    <StackPanel Visibility="{Binding Artists.Count, Converter={StaticResource CountToVisibilityConverter}, Mode=OneWay}"
                                Margin="0,0,0,32">
                        <TextBlock Text="Artists" Style="{StaticResource HeadingSmall}" Margin="0,0,0,16"/>
                        <ItemsControl ItemsSource="{Binding Artists}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource CardBackgroundBrush}"
                                            CornerRadius="8" Padding="16" Width="180"
                                            Margin="0,0,16,16" Cursor="Hand">
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick"
                                                          Command="{Binding DataContext.NavigateToArtistCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                          CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        <StackPanel HorizontalAlignment="Center">
                                            <Border Width="148" Height="148" CornerRadius="74"
                                                    Background="{StaticResource BackgroundTertiaryBrush}">
                                                <Border.Clip>
                                                    <EllipseGeometry Center="74,74" RadiusX="74" RadiusY="74"/>
                                                </Border.Clip>
                                                <Image Source="{Binding ImageUrl}" Stretch="UniformToFill"/>
                                            </Border>
                                            <TextBlock Text="{Binding Name}"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       FontWeight="SemiBold" FontSize="14"
                                                       TextTrimming="CharacterEllipsis"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,12,0,4"/>
                                            <TextBlock Text="Artist"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       FontSize="12"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
