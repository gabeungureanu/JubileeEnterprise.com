<UserControl x:Class="JubileeVibes.Views.Pages.AccountView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             mc:Ignorable="d"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="Transparent">

    <Grid>
        <!-- Logged In View -->
        <ScrollViewer Style="{StaticResource VibesScrollViewerStyle}"
                      Visibility="{Binding IsLoggedIn, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel Margin="32,24" MaxWidth="600">

                <TextBlock Text="Account"
                           Style="{StaticResource HeadingXLarge}"
                           Margin="0,0,0,32"/>

                <!-- Profile Section -->
                <Grid Margin="0,0,0,32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            Width="80" Height="80"
                            CornerRadius="40"
                            Background="{StaticResource BackgroundTertiaryBrush}">
                        <Path Data="{StaticResource AccountIcon}"
                              Fill="{StaticResource TextSecondaryBrush}"
                              Width="40" Height="40"
                              Stretch="Uniform"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0">
                        <TextBlock Text="{Binding User.DisplayName}"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   FontSize="24"
                                   FontWeight="Bold"/>
                        <TextBlock Text="{Binding User.Email}"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="14"/>
                    </StackPanel>
                </Grid>

                <!-- Subscription Info -->
                <Border Background="{StaticResource BackgroundTertiaryBrush}"
                        CornerRadius="8"
                        Padding="24"
                        Margin="0,0,0,32">
                    <StackPanel>
                        <TextBlock Text="Your plan"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding User.Subscription}"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   FontSize="20"
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- Actions -->
                <StackPanel>
                    <Button Style="{StaticResource SecondaryButtonStyle}"
                            Content="Edit profile"
                            Command="{Binding EditProfileCommand}"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,12"/>
                    <Button Style="{StaticResource SecondaryButtonStyle}"
                            Content="Change password"
                            Command="{Binding ChangePasswordCommand}"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,24"/>
                    <Button Style="{StaticResource SecondaryButtonStyle}"
                            Content="Log out"
                            Command="{Binding LogoutCommand}"
                            HorizontalAlignment="Left"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- Login View -->
        <Grid Visibility="{Binding IsLoggedIn, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Width="350">

                <TextBlock Text="Log in to JubileeVibes"
                           Style="{StaticResource HeadingLarge}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,32"/>

                <!-- Email -->
                <TextBlock Text="Email"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource VibesTextBoxStyle}"
                         Margin="0,0,0,16"/>

                <!-- Password -->
                <TextBlock Text="Password"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                <PasswordBox x:Name="PasswordBox"
                             Margin="0,0,0,8"/>

                <!-- Error Message -->
                <TextBlock Text="{Binding LoginError}"
                           Foreground="{StaticResource ErrorBrush}"
                           FontSize="12"
                           Visibility="{Binding LoginError, Converter={StaticResource NullToVisibilityConverter}}"
                           Margin="0,0,0,16"/>

                <!-- Login Button -->
                <Button Style="{StaticResource PrimaryButtonStyle}"
                        Content="Log In"
                        Command="{Binding LoginCommand}"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                        HorizontalAlignment="Stretch"
                        Margin="0,8,0,0"/>

                <!-- Loading -->
                <TextBlock Text="Signing in..."
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"
                           Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                           Margin="0,16,0,0"/>

            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
