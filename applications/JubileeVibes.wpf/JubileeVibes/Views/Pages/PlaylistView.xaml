<UserControl x:Class="JubileeVibes.Views.Pages.PlaylistView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             mc:Ignorable="d"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="32,24" Height="232">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="232"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Playlist Cover -->
            <Border Grid.Column="0"
                    Width="232" Height="232"
                    CornerRadius="4"
                    Background="{StaticResource BackgroundTertiaryBrush}">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="32" ShadowDepth="8" Opacity="0.4" Color="Black"/>
                </Border.Effect>
                <Image Source="{Binding Playlist.CoverImageUrl}" Stretch="UniformToFill"/>
            </Border>

            <!-- Playlist Info -->
            <StackPanel Grid.Column="1" VerticalAlignment="Bottom" Margin="24,0,0,0">
                <TextBlock Text="PLAYLIST"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           FontSize="12"
                           FontWeight="Bold"/>
                <TextBlock Text="{Binding Playlist.Name}"
                           Style="{StaticResource HeadingXLarge}"
                           Margin="0,8,0,16"/>
                <TextBlock Foreground="{StaticResource TextSecondaryBrush}" FontSize="14">
                    <Run Text="{Binding Playlist.OwnerName, Mode=OneWay}"/>
                    <Run Text=" - "/>
                    <Run Text="{Binding Tracks.Count, Mode=OneWay}"/>
                    <Run Text=" songs, "/>
                    <Run Text="{Binding Playlist.TotalDurationFormatted, Mode=OneWay}"/>
                </TextBlock>
            </StackPanel>
        </Grid>

        <!-- Actions + Track List -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="0"
                        Orientation="Horizontal"
                        Margin="32,0,32,24">
                <Button Style="{StaticResource LargePlayButtonStyle}"
                        Command="{Binding PlayAllCommand}">
                    <Path Data="{StaticResource PlayIcon}"
                          Fill="{StaticResource BackgroundPrimaryBrush}"
                          Width="24" Height="24"
                          Stretch="Uniform"/>
                </Button>
                <Button Style="{StaticResource IconButtonStyle}"
                        Command="{Binding ShufflePlayCommand}"
                        Margin="16,0"
                        ToolTip="Shuffle">
                    <Path Data="{StaticResource ShuffleIcon}"
                          Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                          Width="32" Height="32"
                          Stretch="Uniform"/>
                </Button>
                <Button Style="{StaticResource IconButtonStyle}"
                        Command="{Binding EditPlaylistCommand}"
                        Visibility="{Binding IsOwner, Converter={StaticResource BoolToVisibilityConverter}}"
                        ToolTip="Edit">
                    <Path Data="{StaticResource MoreIcon}"
                          Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                          Width="24" Height="24"
                          Stretch="Uniform"/>
                </Button>
            </StackPanel>

            <!-- Track List -->
            <ScrollViewer Grid.Row="1"
                          Style="{StaticResource VibesScrollViewerStyle}"
                          VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Tracks}" Margin="32,0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Height="56" Background="Transparent" Cursor="Hand" Margin="0,0,0,4">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource BackgroundHoverBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftDoubleClick"
                                                  Command="{Binding DataContext.PlayTrackCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  CommandParameter="{Binding}"/>
                                </Border.InputBindings>
                                <Grid Margin="16,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="56"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="{Binding TrackNumber}"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>

                                    <Border Grid.Column="1" Width="40" Height="40"
                                            CornerRadius="4"
                                            Background="{StaticResource BackgroundTertiaryBrush}">
                                        <Image Source="{Binding AlbumArtUrl}" Stretch="UniformToFill"/>
                                    </Border>

                                    <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="12,0">
                                        <TextBlock Text="{Binding Title}"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   FontSize="14"/>
                                        <TextBlock Text="{Binding ArtistName}"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   FontSize="12"/>
                                    </StackPanel>

                                    <ToggleButton Grid.Column="3"
                                                  Style="{StaticResource ToggleIconButtonStyle}"
                                                  IsChecked="{Binding IsLiked}">
                                        <Path Data="{StaticResource HeartOutlineIcon}"
                                              Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}"
                                              Width="16" Height="16"
                                              Stretch="Uniform"/>
                                    </ToggleButton>

                                    <TextBlock Grid.Column="4"
                                               Text="{Binding DurationFormatted}"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
