<UserControl x:Class="JubileeVibes.Views.Pages.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             mc:Ignorable="d"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="Transparent">

    <ScrollViewer Style="{StaticResource VibesScrollViewerStyle}">
        <StackPanel Margin="32,24" MaxWidth="700">

            <TextBlock Text="Settings"
                       Style="{StaticResource HeadingXLarge}"
                       Margin="0,0,0,32"/>

            <!-- Playback Section -->
            <TextBlock Text="Playback"
                       Style="{StaticResource HeadingSmall}"
                       Margin="0,0,0,16"/>

            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Crossfade songs"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="Allow songs to fade in and out between tracks"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="12"/>
                </StackPanel>
                <ToggleButton Grid.Column="1"
                              IsChecked="{Binding CrossfadeEnabled}"
                              VerticalAlignment="Center"/>
            </Grid>

            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Normalize volume"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="Set the same volume level for all tracks"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="12"/>
                </StackPanel>
                <ToggleButton Grid.Column="1"
                              IsChecked="{Binding NormalizationEnabled}"
                              VerticalAlignment="Center"/>
            </Grid>

            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Gapless playback"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="Remove silence between songs for seamless listening"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="12"/>
                </StackPanel>
                <ToggleButton Grid.Column="1"
                              IsChecked="{Binding GaplessPlayback}"
                              VerticalAlignment="Center"/>
            </Grid>

            <Separator Background="{StaticResource BorderSubtleBrush}" Margin="0,8,0,32"/>

            <!-- Audio Quality Section -->
            <TextBlock Text="Audio Quality"
                       Style="{StaticResource HeadingSmall}"
                       Margin="0,0,0,16"/>

            <StackPanel Margin="0,0,0,24">
                <TextBlock Text="Streaming quality"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           Margin="0,0,0,8"/>
                <ComboBox SelectedItem="{Binding StreamingQuality}"
                          Width="200"
                          HorizontalAlignment="Left">
                    <ComboBoxItem Content="Low (96 kbps)"/>
                    <ComboBoxItem Content="Normal (160 kbps)"/>
                    <ComboBoxItem Content="High (256 kbps)"/>
                    <ComboBoxItem Content="Very High (320 kbps)"/>
                </ComboBox>
            </StackPanel>

            <Separator Background="{StaticResource BorderSubtleBrush}" Margin="0,8,0,32"/>

            <!-- Local Files Section -->
            <TextBlock Text="Local Files"
                       Style="{StaticResource HeadingSmall}"
                       Margin="0,0,0,16"/>

            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Show local files"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="Display music files from your computer"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="12"/>
                </StackPanel>
                <ToggleButton Grid.Column="1"
                              IsChecked="{Binding ShowLocalFiles}"
                              VerticalAlignment="Center"/>
            </Grid>

            <StackPanel Margin="0,0,0,16">
                <TextBlock Text="Music folders"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           Margin="0,0,0,8"/>
                <ItemsControl ItemsSource="{Binding LocalMusicFolders}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{StaticResource BackgroundTertiaryBrush}"
                                    CornerRadius="4"
                                    Padding="12,8"
                                    Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="{Binding}"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               VerticalAlignment="Center"/>
                                    <Button Grid.Column="1"
                                            Style="{StaticResource IconButtonStyle}"
                                            Command="{Binding DataContext.RemoveMusicFolderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}">
                                        <Path Data="{StaticResource CloseIcon}"
                                              Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                              Width="12" Height="12" Stretch="Uniform"/>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button Style="{StaticResource SecondaryButtonStyle}"
                        Content="Add folder"
                        Command="{Binding AddMusicFolderCommand}"
                        HorizontalAlignment="Left"/>
            </StackPanel>

            <Separator Background="{StaticResource BorderSubtleBrush}" Margin="0,16,0,32"/>

            <!-- Reset -->
            <Button Style="{StaticResource SecondaryButtonStyle}"
                    Content="Reset to defaults"
                    Command="{Binding ResetToDefaultsCommand}"
                    HorizontalAlignment="Left"/>

        </StackPanel>
    </ScrollViewer>
</UserControl>
