<UserControl x:Class="JubileeVibes.Views.Shell.NowPlayingPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="350">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Album/Playlist Title -->
        <TextBlock Grid.Row="0"
                   Text="{Binding CurrentTrack.AlbumName, FallbackValue='Now Playing'}"
                   Foreground="{StaticResource TextPrimaryBrush}"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,0,0,16"/>

        <!-- Album Art Large -->
        <Grid Grid.Row="1" VerticalAlignment="Top">
            <Border CornerRadius="8"
                    Background="{StaticResource BackgroundTertiaryBrush}"
                    Visibility="{Binding HasCurrentTrack, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30"
                                      ShadowDepth="5"
                                      Opacity="0.5"
                                      Color="Black"/>
                </Border.Effect>
                <Image Source="{Binding CurrentTrack.AlbumArtUrl}"
                       Stretch="Uniform"
                       RenderOptions.BitmapScalingMode="HighQuality"/>
            </Border>

            <!-- Empty state when no track -->
            <Border CornerRadius="8"
                    Background="{StaticResource BackgroundTertiaryBrush}"
                    Height="300"
                    Visibility="{Binding HasCurrentTrack, Converter={StaticResource InverseBoolToVisibilityConverter}, FallbackValue=Visible}">
                <Path Data="{StaticResource MusicNoteIcon}"
                      Fill="{StaticResource TextSubduedBrush}"
                      Width="64" Height="64"
                      Stretch="Uniform"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
            </Border>
        </Grid>

        <!-- Track Info -->
        <StackPanel Grid.Row="2" Margin="0,16,0,0">
            <!-- Track Title and Like Button -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding CurrentTrack.Title, FallbackValue='No track playing'}"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               FontSize="20"
                               FontWeight="Bold"
                               TextTrimming="CharacterEllipsis"/>
                    <TextBlock Text="{Binding CurrentTrack.ArtistName}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="14"
                               Margin="0,4,0,0"
                               Cursor="Hand">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="TextDecorations" Value="Underline"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <ToggleButton Grid.Column="1"
                              Style="{StaticResource ToggleIconButtonStyle}"
                              IsChecked="{Binding CurrentTrack.IsLiked}"
                              Visibility="{Binding HasCurrentTrack, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}"
                              VerticalAlignment="Center"
                              ToolTip="Save to Your Library">
                    <Path Data="{Binding CurrentTrack.IsLiked, Converter={StaticResource LikedToIconConverter}, FallbackValue={StaticResource HeartOutlineIcon}}"
                          Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}"
                          Width="20" Height="20"
                          Stretch="Uniform"/>
                </ToggleButton>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
