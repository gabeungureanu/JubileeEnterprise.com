<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Spotify-like Dark Theme Colors -->

    <!-- Background Colors -->
    <Color x:Key="BackgroundPrimaryColor">#121212</Color>
    <Color x:Key="BackgroundSecondaryColor">#181818</Color>
    <Color x:Key="BackgroundTertiaryColor">#282828</Color>
    <Color x:Key="BackgroundElevatedColor">#242424</Color>
    <Color x:Key="BackgroundHighlightColor">#333333</Color>
    <Color x:Key="BackgroundHoverColor">#2A2A2A</Color>
    <Color x:Key="BackgroundPressedColor">#3E3E3E</Color>

    <!-- Sidebar Colors -->
    <Color x:Key="SidebarBackgroundColor">#000000</Color>
    <Color x:Key="SidebarHoverColor">#1A1A1A</Color>

    <!-- Now Playing Bar Colors -->
    <Color x:Key="NowPlayingBarColor">#181818</Color>
    <Color x:Key="NowPlayingBarBorderColor">#282828</Color>

    <!-- Accent Colors (Spotify Green) -->
    <Color x:Key="AccentPrimaryColor">#1DB954</Color>
    <Color x:Key="AccentHoverColor">#1ED760</Color>
    <Color x:Key="AccentPressedColor">#169C46</Color>
    <Color x:Key="AccentMutedColor">#1A7F3E</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimaryColor">#FFFFFF</Color>
    <Color x:Key="TextSecondaryColor">#B3B3B3</Color>
    <Color x:Key="TextSubduedColor">#6A6A6A</Color>
    <Color x:Key="TextDisabledColor">#535353</Color>
    <Color x:Key="TextBrightColor">#FFFFFF</Color>
    <Color x:Key="TextLinkColor">#1DB954</Color>

    <!-- Border Colors -->
    <Color x:Key="BorderSubtleColor">#3E3E3E</Color>
    <Color x:Key="BorderDefaultColor">#404040</Color>
    <Color x:Key="BorderFocusColor">#FFFFFF</Color>

    <!-- State Colors -->
    <Color x:Key="ErrorColor">#F15E6C</Color>
    <Color x:Key="WarningColor">#FFC864</Color>
    <Color x:Key="SuccessColor">#1DB954</Color>
    <Color x:Key="InfoColor">#509BF5</Color>

    <!-- Overlay Colors -->
    <Color x:Key="OverlayDarkColor">#000000</Color>
    <Color x:Key="OverlayLightColor">#FFFFFF</Color>

    <!-- Card Colors -->
    <Color x:Key="CardBackgroundColor">#181818</Color>
    <Color x:Key="CardHoverColor">#282828</Color>

    <!-- Slider Colors -->
    <Color x:Key="SliderTrackColor">#535353</Color>
    <Color x:Key="SliderProgressColor">#FFFFFF</Color>
    <Color x:Key="SliderThumbColor">#FFFFFF</Color>
    <Color x:Key="SliderHoverProgressColor">#1DB954</Color>

    <!-- Scrollbar Colors -->
    <Color x:Key="ScrollbarTrackColor">#121212</Color>
    <Color x:Key="ScrollbarThumbColor">#535353</Color>
    <Color x:Key="ScrollbarThumbHoverColor">#B3B3B3</Color>

</ResourceDictionary>
