<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Brushes.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- Typography -->
    <FontFamily x:Key="DefaultFontFamily">Segoe UI, Arial</FontFamily>
    <FontFamily x:Key="HeadingFontFamily">Segoe UI Semibold, Arial</FontFamily>
    <FontFamily x:Key="MonoFontFamily">Consolas, Courier New</FontFamily>

    <!-- Font Sizes -->
    <sys:Double x:Key="FontSizeXSmall" xmlns:sys="clr-namespace:System;assembly=mscorlib">11</sys:Double>
    <sys:Double x:Key="FontSizeSmall" xmlns:sys="clr-namespace:System;assembly=mscorlib">12</sys:Double>
    <sys:Double x:Key="FontSizeNormal" xmlns:sys="clr-namespace:System;assembly=mscorlib">14</sys:Double>
    <sys:Double x:Key="FontSizeMedium" xmlns:sys="clr-namespace:System;assembly=mscorlib">16</sys:Double>
    <sys:Double x:Key="FontSizeLarge" xmlns:sys="clr-namespace:System;assembly=mscorlib">18</sys:Double>
    <sys:Double x:Key="FontSizeXLarge" xmlns:sys="clr-namespace:System;assembly=mscorlib">24</sys:Double>
    <sys:Double x:Key="FontSizeXXLarge" xmlns:sys="clr-namespace:System;assembly=mscorlib">32</sys:Double>
    <sys:Double x:Key="FontSizeHuge" xmlns:sys="clr-namespace:System;assembly=mscorlib">48</sys:Double>

    <!-- Spacing -->
    <Thickness x:Key="SmallMargin">4</Thickness>
    <Thickness x:Key="NormalMargin">8</Thickness>
    <Thickness x:Key="MediumMargin">12</Thickness>
    <Thickness x:Key="LargeMargin">16</Thickness>
    <Thickness x:Key="XLargeMargin">24</Thickness>

    <!-- Corner Radius -->
    <CornerRadius x:Key="SmallCornerRadius">4</CornerRadius>
    <CornerRadius x:Key="NormalCornerRadius">6</CornerRadius>
    <CornerRadius x:Key="MediumCornerRadius">8</CornerRadius>
    <CornerRadius x:Key="LargeCornerRadius">12</CornerRadius>
    <CornerRadius x:Key="CircularCornerRadius">9999</CornerRadius>

    <!-- Sizes -->
    <sys:Double x:Key="SidebarWidth" xmlns:sys="clr-namespace:System;assembly=mscorlib">240</sys:Double>
    <sys:Double x:Key="NowPlayingBarHeight" xmlns:sys="clr-namespace:System;assembly=mscorlib">90</sys:Double>
    <sys:Double x:Key="IconSizeSmall" xmlns:sys="clr-namespace:System;assembly=mscorlib">16</sys:Double>
    <sys:Double x:Key="IconSizeNormal" xmlns:sys="clr-namespace:System;assembly=mscorlib">20</sys:Double>
    <sys:Double x:Key="IconSizeMedium" xmlns:sys="clr-namespace:System;assembly=mscorlib">24</sys:Double>
    <sys:Double x:Key="IconSizeLarge" xmlns:sys="clr-namespace:System;assembly=mscorlib">32</sys:Double>

    <!-- Album Art Sizes -->
    <sys:Double x:Key="AlbumArtSmall" xmlns:sys="clr-namespace:System;assembly=mscorlib">40</sys:Double>
    <sys:Double x:Key="AlbumArtMedium" xmlns:sys="clr-namespace:System;assembly=mscorlib">56</sys:Double>
    <sys:Double x:Key="AlbumArtLarge" xmlns:sys="clr-namespace:System;assembly=mscorlib">180</sys:Double>
    <sys:Double x:Key="AlbumArtXLarge" xmlns:sys="clr-namespace:System;assembly=mscorlib">232</sys:Double>

    <!-- Card Sizes -->
    <sys:Double x:Key="CardWidth" xmlns:sys="clr-namespace:System;assembly=mscorlib">180</sys:Double>
    <sys:Double x:Key="CardHeight" xmlns:sys="clr-namespace:System;assembly=mscorlib">240</sys:Double>

    <!-- Default Window Style -->
    <Style x:Key="VibesWindowStyle" TargetType="Window">
        <Setter Property="Background" Value="{StaticResource BackgroundPrimaryBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="AllowsTransparency" Value="False"/>
        <Setter Property="ResizeMode" Value="CanResizeWithGrip"/>
    </Style>

    <!-- Default TextBlock Style -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>

    <!-- Heading Styles -->
    <Style x:Key="HeadingXLarge" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource HeadingFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeXXLarge}"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="HeadingLarge" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource HeadingFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeXLarge}"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="HeadingMedium" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource HeadingFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeLarge}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style x:Key="HeadingSmall" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource HeadingFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeMedium}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- Body Text Styles -->
    <Style x:Key="BodyPrimary" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
    </Style>

    <Style x:Key="BodySecondary" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
    </Style>

    <Style x:Key="Caption" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextSubduedBrush}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeXSmall}"/>
    </Style>

    <!-- Link Style -->
    <Style x:Key="LinkText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                <Setter Property="TextDecorations" Value="Underline"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
