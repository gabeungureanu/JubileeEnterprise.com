<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:models="clr-namespace:JubileeVibes.Core.Models;assembly=JubileeVibes.Core">

    <!-- Track Item in List -->
    <DataTemplate x:Key="TrackListItemTemplate" DataType="{x:Type models:Track}">
        <Grid Height="56">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="56"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>

            <!-- Track Number / Play indicator -->
            <TextBlock Grid.Column="0"
                       Text="{Binding TrackNumber}"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="14"/>

            <!-- Album Art -->
            <Border Grid.Column="1"
                    Width="40" Height="40"
                    CornerRadius="4"
                    Background="{StaticResource BackgroundTertiaryBrush}"
                    Margin="8,0">
                <Image Source="{Binding AlbumArtUrl}"
                       Stretch="UniformToFill"/>
            </Border>

            <!-- Title and Artist -->
            <StackPanel Grid.Column="2"
                        VerticalAlignment="Center"
                        Margin="8,0">
                <TextBlock Text="{Binding Title}"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           FontSize="14"
                           TextTrimming="CharacterEllipsis"/>
                <TextBlock Text="{Binding ArtistName}"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="12"
                           TextTrimming="CharacterEllipsis"/>
            </StackPanel>

            <!-- Like Button -->
            <Button Grid.Column="3"
                    Style="{StaticResource IconButtonStyle}"
                    Width="32" Height="32"
                    Visibility="Hidden">
                <Path Data="{StaticResource HeartOutlineIcon}"
                      Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                      Width="16" Height="16"
                      Stretch="Uniform"/>
            </Button>

            <!-- Duration -->
            <TextBlock Grid.Column="4"
                       Text="{Binding DurationFormatted}"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       FontSize="14"
                       Margin="0,0,16,0"/>
        </Grid>
    </DataTemplate>

    <!-- Album Card -->
    <DataTemplate x:Key="AlbumCardTemplate" DataType="{x:Type models:Album}">
        <Border Background="{StaticResource CardBackgroundBrush}"
                CornerRadius="8"
                Padding="16"
                Width="180"
                Cursor="Hand">
            <StackPanel>
                <!-- Album Art -->
                <Border Width="148" Height="148"
                        CornerRadius="4"
                        Background="{StaticResource BackgroundTertiaryBrush}">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="4" Opacity="0.3" Color="Black"/>
                    </Border.Effect>
                    <Image Source="{Binding CoverArtUrl}"
                           Stretch="UniformToFill"/>
                </Border>

                <!-- Album Info -->
                <TextBlock Text="{Binding Title}"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           FontWeight="SemiBold"
                           FontSize="14"
                           TextTrimming="CharacterEllipsis"
                           Margin="0,12,0,4"/>
                <TextBlock Text="{Binding ArtistName}"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="12"
                           TextTrimming="CharacterEllipsis"/>
            </StackPanel>
        </Border>
    </DataTemplate>

    <!-- Artist Card -->
    <DataTemplate x:Key="ArtistCardTemplate" DataType="{x:Type models:Artist}">
        <Border Background="{StaticResource CardBackgroundBrush}"
                CornerRadius="8"
                Padding="16"
                Width="180"
                Cursor="Hand">
            <StackPanel HorizontalAlignment="Center">
                <!-- Artist Image (Circular) -->
                <Border Width="148" Height="148"
                        CornerRadius="74"
                        Background="{StaticResource BackgroundTertiaryBrush}">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="4" Opacity="0.3" Color="Black"/>
                    </Border.Effect>
                    <Border.Clip>
                        <EllipseGeometry Center="74,74" RadiusX="74" RadiusY="74"/>
                    </Border.Clip>
                    <Image Source="{Binding ImageUrl}"
                           Stretch="UniformToFill"/>
                </Border>

                <!-- Artist Info -->
                <TextBlock Text="{Binding Name}"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           FontWeight="SemiBold"
                           FontSize="14"
                           TextTrimming="CharacterEllipsis"
                           HorizontalAlignment="Center"
                           Margin="0,12,0,4"/>
                <TextBlock Text="Artist"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="12"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </DataTemplate>

    <!-- Playlist Card -->
    <DataTemplate x:Key="PlaylistCardTemplate" DataType="{x:Type models:Playlist}">
        <Border Background="{StaticResource CardBackgroundBrush}"
                CornerRadius="8"
                Padding="16"
                Width="180"
                Cursor="Hand">
            <StackPanel>
                <!-- Playlist Cover -->
                <Border Width="148" Height="148"
                        CornerRadius="4"
                        Background="{StaticResource BackgroundTertiaryBrush}">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="4" Opacity="0.3" Color="Black"/>
                    </Border.Effect>
                    <Image Source="{Binding CoverImageUrl}"
                           Stretch="UniformToFill"/>
                </Border>

                <!-- Playlist Info -->
                <TextBlock Text="{Binding Name}"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           FontWeight="SemiBold"
                           FontSize="14"
                           TextTrimming="CharacterEllipsis"
                           Margin="0,12,0,4"/>
                <TextBlock Text="{Binding Description}"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="12"
                           TextTrimming="CharacterEllipsis"
                           TextWrapping="Wrap"
                           MaxHeight="36"/>
            </StackPanel>
        </Border>
    </DataTemplate>

</ResourceDictionary>
