# =============================================================================
# Mailcow Environment Configuration for Jubilee Browser
# =============================================================================
# Copy this file to .env.mailcow and fill in the values.
# NEVER commit the actual .env.mailcow file to source control!
# =============================================================================

# =============================================================================
# Mailcow API Configuration
# =============================================================================

# Mailcow admin panel URL
MAILCOW_API_URL=https://mail.jubileebrowser.com

# Mailcow API key (generate from Mailcow admin panel: Configuration -> API)
MAILCOW_API_KEY=your-mailcow-api-key-here

# =============================================================================
# Amazon SES SMTP Configuration
# =============================================================================

# SES SMTP endpoint (varies by region)
# US East (N. Virginia): email-smtp.us-east-1.amazonaws.com
# US West (Oregon): email-smtp.us-west-2.amazonaws.com
# EU (Ireland): email-smtp.eu-west-1.amazonaws.com
# EU (Frankfurt): email-smtp.eu-central-1.amazonaws.com
SES_SMTP_ENDPOINT=email-smtp.us-east-1.amazonaws.com

# SES SMTP credentials (NOT your AWS access keys!)
# Generate these from AWS Console: SES -> SMTP Settings -> Create SMTP Credentials
SES_SMTP_USERNAME=your-ses-smtp-username
SES_SMTP_PASSWORD=your-ses-smtp-password

# SES sending limits (for rate limiting in application)
SES_SENDING_RATE=14
SES_DAILY_QUOTA=50000

# =============================================================================
# PostgreSQL Database Configuration
# =============================================================================

# Jubilee Browser database connection
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=worldwidebibleweb
DB_USER=postgres
DB_PASSWORD=your-database-password

# =============================================================================
# Email Configuration
# =============================================================================

# Default sending domain
EMAIL_DEFAULT_DOMAIN=jubileebrowser.com

# System email addresses
EMAIL_NOREPLY=noreply@jubileebrowser.com
EMAIL_SUPPORT=support@jubileebrowser.com
EMAIL_ADMIN=admin@jubileebrowser.com

# Email rate limits (per hour)
EMAIL_RATE_LIMIT_PER_USER=50
EMAIL_RATE_LIMIT_GLOBAL=1000

# =============================================================================
# Webhook Configuration (for bounce/complaint handling)
# =============================================================================

# SES webhook endpoint (receives bounce/complaint notifications)
WEBHOOK_SES_ENDPOINT=https://api.jubileebrowser.com/webhooks/ses

# Webhook secret for verification
WEBHOOK_SECRET=your-webhook-secret-here

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: debug, info, warning, error
LOG_LEVEL=info

# Log retention (days)
LOG_RETENTION_DAYS=30
