<Window x:Class="JubileeBrowser.SpiritualNutritionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Spiritual Nutrition"
        Width="324" Height="583"
        WindowStartupLocation="Manual"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Deactivated="Window_Deactivated">

    <Border Background="#FFFFFF" CornerRadius="0" BorderBrush="#000000" BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect BlurRadius="12" ShadowDepth="0" Color="#000000" Opacity="0.45"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0"
                    Background="#000000"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="SPIRITUAL NUTRITION"
                               Foreground="#FFFFFF"
                               FontWeight="Bold"
                               FontSize="20"
                               FontFamily="Arial Black"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="12,0,0,0"/>
                    <Button Grid.Column="1"
                            Width="36" Height="36"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="CloseButton_Click"
                            Cursor="Hand"
                            Margin="0,0,4,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="2">
                                    <TextBlock Text="&#xE711;"
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="19"
                                               Foreground="#FFFFFF"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#333333"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- Content Area -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <Grid Background="#FFFFFF">
                    <!-- Loading Indicator -->
                    <StackPanel x:Name="LoadingPanel"
                                VerticalAlignment="Center" HorizontalAlignment="Center"
                                Visibility="Collapsed">
                        <ProgressBar IsIndeterminate="True" Width="140" Height="4" Foreground="#000000"/>
                        <TextBlock Text="Analyzing content..."
                                   Foreground="#000000" FontSize="18"
                                   HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>

                    <!-- Main Content Panel -->
                    <StackPanel x:Name="ContentPanel" Visibility="Visible">
                        <!-- Overall Score Section -->
                        <Border BorderBrush="#000000" BorderThickness="2" Margin="10,10,10,0">
                            <Grid Background="#FFFFFF">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="10,8,0,8">
                                    <TextBlock Text="OVERALL SCORE"
                                               FontWeight="Bold"
                                               FontSize="16"
                                               FontFamily="Arial Black"
                                               Foreground="#000000"/>
                                    <TextBlock x:Name="DomainUrlText"
                                               Text=""
                                               FontSize="12"
                                               Foreground="#999999"
                                               Margin="0,-2,0,0"/>
                                </StackPanel>
                                <TextBlock x:Name="OverallScoreText"
                                           Grid.Column="1"
                                           Text="--"
                                           FontWeight="Black"
                                           FontSize="37"
                                           FontFamily="Arial Black"
                                           Foreground="#000000"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Right"
                                           Margin="0,4,12,4"/>
                            </Grid>
                        </Border>

                        <!-- Category Header -->
                        <Border BorderBrush="#000000" BorderThickness="2,0,2,2" Margin="10,0,10,0">
                            <Grid Background="#FFFFFF">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Health Indicators"
                                           Grid.Column="0"
                                           FontWeight="Bold"
                                           FontSize="17"
                                           FontFamily="Arial Black"
                                           Foreground="#4169E1"
                                           VerticalAlignment="Center"
                                           Margin="10,5,0,5"/>
                                <TextBlock Text="Score"
                                           Grid.Column="1"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#000000"
                                           VerticalAlignment="Center"
                                           Margin="0,5,10,5"/>
                            </Grid>
                        </Border>

                        <!-- Categories List -->
                        <Border BorderBrush="#000000" BorderThickness="2,0,2,2" Margin="10,0,10,0">
                            <StackPanel Background="#FFFFFF">
                                <!-- 1. Truthfulness -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="54"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="1. Truthfulness"
                                               FontWeight="SemiBold" FontSize="17"
                                               Foreground="#000000"
                                               VerticalAlignment="Center"
                                               Margin="10,5,0,5"/>
                                    <TextBlock x:Name="TruthfulnessText"
                                               Grid.Column="1" Text="--%"
                                               FontWeight="Bold" FontSize="17"
                                               Foreground="#000000"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Right"
                                               Margin="0,5,10,5"/>
                                </Grid>
                                <Border Height="1" Background="#CCCCCC" Margin="10,0,10,0"/>

                                <!-- 2. Moral Alignment -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="54"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="2. Moral Alignment"
                                               FontWeight="SemiBold" FontSize="17"
                                               Foreground="#000000"
                                               VerticalAlignment="Center"
                                               Margin="10,5,0,5"/>
                                    <TextBlock x:Name="MoralAlignmentText"
                                               Grid.Column="1" Text="--%"
                                               FontWeight="Bold" FontSize="17"
                                               Foreground="#000000"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Right"
                                               Margin="0,5,10,5"/>
                                </Grid>
                                <Border Height="1" Background="#CCCCCC" Margin="10,0,10,0"/>

                                <!-- 3. Human Dignity -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="54"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="3. Human Dignity"
                                               FontWeight="SemiBold" FontSize="17"
                                               Foreground="#000000"
                                               VerticalAlignment="Center"
                                               Margin="10,5,0,5"/>
                                    <TextBlock x:Name="HumanDignityText"
                                               Grid.Column="1" Text="--%"
                                               FontWeight="Bold" FontSize="17"
                                               Foreground="#000000"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Right"
                                               Margin="0,5,10,5"/>
                                </Grid>
                                <Border Height="1" Background="#CCCCCC" Margin="10,0,10,0"/>

                                <!-- 4. Emotional Impact -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="54"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="4. Emotional Impact"
                                               FontWeight="SemiBold" FontSize="17"
                                               Foreground="#000000"
                                               VerticalAlignment="Center"
                                               Margin="10,5,0,5"/>
                                    <TextBlock x:Name="EmotionalImpactText"
                                               Grid.Column="1" Text="--%"
                                               FontWeight="Bold" FontSize="17"
                                               Foreground="#000000"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Right"
                                               Margin="0,5,10,5"/>
                                </Grid>
                                <Border Height="1" Background="#CCCCCC" Margin="10,0,10,0"/>

                                <!-- 5. Wisdom vs Folly -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="54"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="5. Wisdom vs Folly"
                                               FontWeight="SemiBold" FontSize="17"
                                               Foreground="#000000"
                                               VerticalAlignment="Center"
                                               Margin="10,5,0,5"/>
                                    <TextBlock x:Name="WisdomVsFollyText"
                                               Grid.Column="1" Text="--%"
                                               FontWeight="Bold" FontSize="17"
                                               Foreground="#000000"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Right"
                                               Margin="0,5,10,5"/>
                                </Grid>
                                <Border Height="1" Background="#CCCCCC" Margin="10,0,10,0"/>

                                <!-- 6. Intent Direction -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="54"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="6. Intent Direction"
                                               FontWeight="SemiBold" FontSize="17"
                                               Foreground="#000000"
                                               VerticalAlignment="Center"
                                               Margin="10,5,0,5"/>
                                    <TextBlock x:Name="IntentDirectionText"
                                               Grid.Column="1" Text="--%"
                                               FontWeight="Bold" FontSize="17"
                                               Foreground="#000000"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Right"
                                               Margin="0,5,10,5"/>
                                </Grid>
                                <Border Height="1" Background="#CCCCCC" Margin="10,0,10,0"/>

                                <!-- 7. Biblical Worldview -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="54"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="7. Biblical Worldview"
                                               FontWeight="SemiBold" FontSize="17"
                                               Foreground="#000000"
                                               VerticalAlignment="Center"
                                               Margin="10,5,0,5"/>
                                    <TextBlock x:Name="BiblicalWorldviewText"
                                               Grid.Column="1" Text="--%"
                                               FontWeight="Bold" FontSize="17"
                                               Foreground="#000000"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Right"
                                               Margin="0,5,10,5"/>
                                </Grid>
                                <Border Height="1" Background="#CCCCCC" Margin="10,0,10,0"/>

                                <!-- 8. Early Church Resonance -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="54"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="8. Early Church (Acts)"
                                               FontWeight="SemiBold" FontSize="17"
                                               Foreground="#000000"
                                               VerticalAlignment="Center"
                                               Margin="10,5,0,5"/>
                                    <TextBlock x:Name="EarlyChurchText"
                                               Grid.Column="1" Text="--%"
                                               FontWeight="Bold" FontSize="17"
                                               Foreground="#000000"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Right"
                                               Margin="0,5,10,5"/>
                                </Grid>
                                <Border Height="1" Background="#CCCCCC" Margin="10,0,10,0"/>

                                <!-- 9. Constructive Influence -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="54"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="9. Constructive Influence"
                                               FontWeight="SemiBold" FontSize="17"
                                               Foreground="#000000"
                                               VerticalAlignment="Center"
                                               Margin="10,5,0,5"/>
                                    <TextBlock x:Name="ConstructiveText"
                                               Grid.Column="1" Text="--%"
                                               FontWeight="Bold" FontSize="17"
                                               Foreground="#000000"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Right"
                                               Margin="0,5,10,5"/>
                                </Grid>
                                <Border Height="1" Background="#CCCCCC" Margin="10,0,10,0"/>

                                <!-- 10. Spiritual Density -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="54"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="10. Spiritual Density"
                                               FontWeight="SemiBold" FontSize="17"
                                               Foreground="#000000"
                                               VerticalAlignment="Center"
                                               Margin="10,5,0,5"/>
                                    <TextBlock x:Name="SpiritualDensityText"
                                               Grid.Column="1" Text="--%"
                                               FontWeight="Bold" FontSize="17"
                                               Foreground="#000000"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Right"
                                               Margin="0,5,10,5"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Ingredients Section -->
                        <Border BorderBrush="#000000" BorderThickness="2,0,2,2" Margin="10,0,10,10">
                            <StackPanel Background="#FFFFFF" Margin="10,8,10,10">
                                <TextBlock Text="INGREDIENTS:"
                                           FontWeight="Bold"
                                           FontSize="11"
                                           Foreground="#000000"
                                           Margin="0,0,0,6"/>
                                <TextBlock x:Name="IngredientsText"
                                           Text="Analyzing content for spiritual themes, values, and influences..."
                                           FontSize="11"
                                           Foreground="#333333"
                                           TextWrapping="Wrap"
                                           LineHeight="14"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
