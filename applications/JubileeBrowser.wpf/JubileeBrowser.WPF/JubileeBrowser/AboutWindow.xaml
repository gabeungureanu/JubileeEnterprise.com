<Window x:Class="JubileeBrowser.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Jubilee"
        Width="520" Height="560"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Border Background="#1c1c33" CornerRadius="12" BorderBrush="#2c2c4a" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="24" ShadowDepth="0" Color="#000000" Opacity="0.45"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="52"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0"
                    Background="#20203a"
                    CornerRadius="12,12,0,0"
                    BorderBrush="#2c2c4a"
                    BorderThickness="0,0,0,1"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="About Jubilee"
                               Foreground="#E6E6F2"
                               FontWeight="SemiBold"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="16,0"/>
                    <Button Grid.Column="1"
                            Width="36" Height="36"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="CloseButton_Click"
                            Cursor="Hand"
                            Margin="0,0,8,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                                    <TextBlock Text="&#xE711;"
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="12"
                                               Foreground="#C7C7D6"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#2a2a44"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="32,28,32,24">
                <!-- Avatar -->
                <Ellipse Width="86" Height="86" Stroke="#5AC8FA" StrokeThickness="2" Margin="0,8,0,16">
                    <Ellipse.Fill>
                        <ImageBrush x:Name="AvatarImageBrush" Stretch="UniformToFill"/>
                    </Ellipse.Fill>
                </Ellipse>

                <TextBlock Text="Jubilee Browser"
                           Foreground="#F2F2F7"
                           FontSize="20"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"/>

                <TextBlock x:Name="VersionText"
                           Foreground="#C0C0D0"
                           FontSize="13"
                           Margin="0,8,0,0"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Copyright 2026 Jubilee Software, Inc."
                           Foreground="#9A9AAD"
                           FontSize="12"
                           Margin="0,4,0,0"
                           HorizontalAlignment="Center"/>

                <Border Background="#2a2a43"
                        CornerRadius="10"
                        Padding="16"
                        Margin="0,24,0,0"
                        Width="340">
                    <StackPanel>
                        <TextBlock Text="Jubilee is up to date."
                                   Foreground="#43D17A"
                                   FontWeight="SemiBold"
                                   FontSize="12"/>
                        <Button Content="Check for Updates"
                                Height="32"
                                Margin="0,12,0,10"
                                Background="#3a3a52"
                                Foreground="#E6E6F2"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="6">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#454560"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <TextBlock Text="Channel: Stable"
                                   Foreground="#B0B0C2"
                                   FontSize="11"/>
                        <TextBlock Text="Last checked: 1h ago"
                                   Foreground="#B0B0C2"
                                   FontSize="11"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Border>
</Window>
