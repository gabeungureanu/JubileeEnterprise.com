<Window x:Class="JubileeOutlook.Views.NewEventWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:JubileeOutlook.ViewModels"
        mc:Ignorable="d"
        Title="New event"
        Height="750"
        Width="1100"
        MinHeight="650"
        MinWidth="950"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="#1A1A1A"
        WindowStartupLocation="CenterOwner">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="80"
                      ResizeBorderThickness="5"
                      GlassFrameThickness="0"
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Window.DataContext>
        <viewmodels:NewEventViewModel/>
    </Window.DataContext>

    <Grid Background="#1A1A1A">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Grid Grid.Row="0" Background="#1A1A1A" Height="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="New event"
                       FontSize="13"
                       Foreground="#CCCCCC"
                       VerticalAlignment="Center"
                       Margin="16,0,0,0"/>

            <!-- Window Controls -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" WindowChrome.IsHitTestVisibleInChrome="True">
                <Button Content="&#xE921;" Style="{StaticResource WindowButtonStyle}" Click="MinimizeButton_Click" ToolTip="Minimize"/>
                <Button Content="&#xE922;" Style="{StaticResource WindowButtonStyle}" Click="MaximizeButton_Click" ToolTip="Maximize"/>
                <Button Content="&#xE8BB;" Style="{StaticResource CloseButtonStyle}" Click="CloseButton_Click" ToolTip="Close"/>
            </StackPanel>
        </Grid>

        <!-- Tab Header -->
        <Border Grid.Row="1" Background="#252525" BorderBrush="#333333" BorderThickness="0,1,0,1" Padding="16,12">
            <TextBlock Text="Event" FontSize="13" FontWeight="SemiBold" Foreground="#FFFFFF"/>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Form -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Background="#1A1A1A">
                <StackPanel Margin="20,16">

                    <!-- Toolbar Row -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <!-- Response options -->
                        <Button Style="{StaticResource EventToolbarButtonStyle}" Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xe7fd;" FontFamily="{StaticResource MaterialIcons}" FontSize="16" Margin="0,0,6,0"/>
                                <TextBlock Text="Response options" FontSize="12"/>
                                <TextBlock Text="&#xe5c5;" FontFamily="{StaticResource MaterialIcons}" FontSize="14" Margin="4,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Show as Status -->
                        <ComboBox ItemsSource="{Binding ShowAsStatusOptions}"
                                 SelectedItem="{Binding ShowAsStatus}"
                                 Margin="0,0,8,0">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Setter Property="Background" Value="#252525"/>
                                    <Setter Property="Foreground" Value="#EEEEEE"/>
                                    <Setter Property="BorderBrush" Value="#3A3A3A"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Padding" Value="8,6"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Setter Property="Height" Value="32"/>
                                    <Setter Property="MinWidth" Value="140"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ComboBox">
                                                <Grid>
                                                    <ToggleButton x:Name="ToggleButton"
                                                                 Background="{TemplateBinding Background}"
                                                                 BorderBrush="{TemplateBinding BorderBrush}"
                                                                 BorderThickness="{TemplateBinding BorderThickness}"
                                                                 IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                 ClickMode="Press"
                                                                 Focusable="False">
                                                        <ToggleButton.Style>
                                                            <Style TargetType="ToggleButton">
                                                                <Setter Property="Template">
                                                                    <Setter.Value>
                                                                        <ControlTemplate TargetType="ToggleButton">
                                                                            <Border x:Name="border"
                                                                                   Background="{TemplateBinding Background}"
                                                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                                                   CornerRadius="4">
                                                                                <Grid>
                                                                                    <Grid.ColumnDefinitions>
                                                                                        <ColumnDefinition Width="*"/>
                                                                                        <ColumnDefinition Width="Auto"/>
                                                                                    </Grid.ColumnDefinitions>
                                                                                    <ContentPresenter Grid.Column="0" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                                                                    <TextBlock Grid.Column="1" Text="&#xe5c5;" FontFamily="{StaticResource MaterialIcons}" FontSize="14" Foreground="#CCCCCC" VerticalAlignment="Center" Margin="4,0,8,0"/>
                                                                                </Grid>
                                                                            </Border>
                                                                            <ControlTemplate.Triggers>
                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                    <Setter TargetName="border" Property="Background" Value="#2A2A2A"/>
                                                                                </Trigger>
                                                                            </ControlTemplate.Triggers>
                                                                        </ControlTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Style>
                                                        </ToggleButton.Style>
                                                    </ToggleButton>
                                                    <ContentPresenter x:Name="ContentSite"
                                                                     IsHitTestVisible="False"
                                                                     Content="{TemplateBinding SelectionBoxItem}"
                                                                     ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                     ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                                     Margin="8,0,24,0"
                                                                     VerticalAlignment="Center"
                                                                     HorizontalAlignment="Left"/>
                                                    <Popup x:Name="Popup"
                                                          Placement="Bottom"
                                                          IsOpen="{TemplateBinding IsDropDownOpen}"
                                                          AllowsTransparency="True"
                                                          Focusable="False"
                                                          PopupAnimation="Slide">
                                                        <Border Background="#2b2b2b"
                                                               BorderBrush="#3a3a3a"
                                                               BorderThickness="1"
                                                               CornerRadius="6"
                                                               Padding="4"
                                                               MinWidth="{TemplateBinding ActualWidth}">
                                                            <Border.Effect>
                                                                <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.5" Color="Black"/>
                                                            </Border.Effect>
                                                            <ItemsPresenter/>
                                                        </Border>
                                                    </Popup>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ComboBox.Style>
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                    <Setter Property="Padding" Value="8,6"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ComboBoxItem">
                                                <Border x:Name="border"
                                                       Background="{TemplateBinding Background}"
                                                       Padding="{TemplateBinding Padding}"
                                                       CornerRadius="4">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#3A3A3A"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#B8860B"/>
                                                        <Setter Property="Foreground" Value="#000000"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle Width="4" Height="16" Fill="{Binding Color}" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Name}" FontSize="12" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <!-- Reminder Time -->
                        <ComboBox ItemsSource="{Binding ReminderOptions}"
                                 SelectedItem="{Binding SelectedReminder}"
                                 Margin="0,0,8,0">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Setter Property="Background" Value="#252525"/>
                                    <Setter Property="Foreground" Value="#EEEEEE"/>
                                    <Setter Property="BorderBrush" Value="#3A3A3A"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Padding" Value="8,6"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Setter Property="Height" Value="32"/>
                                    <Setter Property="MinWidth" Value="180"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ComboBox">
                                                <Grid>
                                                    <ToggleButton x:Name="ToggleButton"
                                                                 Background="{TemplateBinding Background}"
                                                                 BorderBrush="{TemplateBinding BorderBrush}"
                                                                 BorderThickness="{TemplateBinding BorderThickness}"
                                                                 IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                 ClickMode="Press"
                                                                 Focusable="False">
                                                        <ToggleButton.Style>
                                                            <Style TargetType="ToggleButton">
                                                                <Setter Property="Template">
                                                                    <Setter.Value>
                                                                        <ControlTemplate TargetType="ToggleButton">
                                                                            <Border x:Name="border"
                                                                                   Background="{TemplateBinding Background}"
                                                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                                                   CornerRadius="4">
                                                                                <Grid>
                                                                                    <Grid.ColumnDefinitions>
                                                                                        <ColumnDefinition Width="Auto"/>
                                                                                        <ColumnDefinition Width="*"/>
                                                                                        <ColumnDefinition Width="Auto"/>
                                                                                    </Grid.ColumnDefinitions>
                                                                                    <TextBlock Grid.Column="0" Text="&#xe7f4;" FontFamily="{StaticResource MaterialIcons}" FontSize="16" Foreground="#CCCCCC" VerticalAlignment="Center" Margin="8,0,6,0"/>
                                                                                    <ContentPresenter Grid.Column="1" VerticalAlignment="Center"/>
                                                                                    <TextBlock Grid.Column="2" Text="&#xe5c5;" FontFamily="{StaticResource MaterialIcons}" FontSize="14" Foreground="#CCCCCC" VerticalAlignment="Center" Margin="4,0,8,0"/>
                                                                                </Grid>
                                                                            </Border>
                                                                            <ControlTemplate.Triggers>
                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                    <Setter TargetName="border" Property="Background" Value="#2A2A2A"/>
                                                                                </Trigger>
                                                                            </ControlTemplate.Triggers>
                                                                        </ControlTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Style>
                                                        </ToggleButton.Style>
                                                    </ToggleButton>
                                                    <ContentPresenter x:Name="ContentSite"
                                                                     IsHitTestVisible="False"
                                                                     Content="{TemplateBinding SelectionBoxItem}"
                                                                     ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                     ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                                     Margin="36,0,24,0"
                                                                     VerticalAlignment="Center"
                                                                     HorizontalAlignment="Left"/>
                                                    <Popup x:Name="Popup"
                                                          Placement="Bottom"
                                                          IsOpen="{TemplateBinding IsDropDownOpen}"
                                                          AllowsTransparency="True"
                                                          Focusable="False"
                                                          PopupAnimation="Slide">
                                                        <Border Background="#2b2b2b"
                                                               BorderBrush="#3a3a3a"
                                                               BorderThickness="1"
                                                               CornerRadius="6"
                                                               Padding="4"
                                                               MinWidth="{TemplateBinding ActualWidth}">
                                                            <Border.Effect>
                                                                <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.5" Color="Black"/>
                                                            </Border.Effect>
                                                            <ItemsPresenter/>
                                                        </Border>
                                                    </Popup>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ComboBox.Style>
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                    <Setter Property="Padding" Value="12,8"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ComboBoxItem">
                                                <Border x:Name="border"
                                                       Background="{TemplateBinding Background}"
                                                       Padding="{TemplateBinding Padding}"
                                                       CornerRadius="4">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#3A3A3A"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="Transparent"/>
                                                        <Setter Property="Foreground" Value="#FFFFFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <TextBlock Text="{Binding}" FontSize="12" VerticalAlignment="Center"/>
                                        <TextBlock Text="&#xe5ca;" FontFamily="{StaticResource MaterialIcons}" FontSize="16" Foreground="#0078D4" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,8,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ComboBoxItem}, Path=IsSelected}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <!-- Categorize -->
                        <ComboBox ItemsSource="{Binding CategoryOptions}"
                                 SelectedItem="{Binding SelectedCategory}"
                                 Margin="0,0,8,0">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Setter Property="Background" Value="#252525"/>
                                    <Setter Property="Foreground" Value="#EEEEEE"/>
                                    <Setter Property="BorderBrush" Value="#3A3A3A"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Padding" Value="8,6"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Setter Property="Height" Value="32"/>
                                    <Setter Property="MinWidth" Value="140"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ComboBox">
                                                <Grid>
                                                    <ToggleButton x:Name="ToggleButton"
                                                                 Background="{TemplateBinding Background}"
                                                                 BorderBrush="{TemplateBinding BorderBrush}"
                                                                 BorderThickness="{TemplateBinding BorderThickness}"
                                                                 IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                 ClickMode="Press"
                                                                 Focusable="False">
                                                        <ToggleButton.Style>
                                                            <Style TargetType="ToggleButton">
                                                                <Setter Property="Template">
                                                                    <Setter.Value>
                                                                        <ControlTemplate TargetType="ToggleButton">
                                                                            <Border x:Name="border"
                                                                                   Background="{TemplateBinding Background}"
                                                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                                                   CornerRadius="4">
                                                                                <Grid>
                                                                                    <Grid.ColumnDefinitions>
                                                                                        <ColumnDefinition Width="*"/>
                                                                                        <ColumnDefinition Width="Auto"/>
                                                                                    </Grid.ColumnDefinitions>
                                                                                    <ContentPresenter Grid.Column="0" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                                                                    <TextBlock Grid.Column="1" Text="&#xe5c5;" FontFamily="{StaticResource MaterialIcons}" FontSize="14" Foreground="#CCCCCC" VerticalAlignment="Center" Margin="4,0,8,0"/>
                                                                                </Grid>
                                                                            </Border>
                                                                            <ControlTemplate.Triggers>
                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                    <Setter TargetName="border" Property="Background" Value="#2A2A2A"/>
                                                                                </Trigger>
                                                                            </ControlTemplate.Triggers>
                                                                        </ControlTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Style>
                                                        </ToggleButton.Style>
                                                    </ToggleButton>
                                                    <ContentPresenter x:Name="ContentSite"
                                                                     IsHitTestVisible="False"
                                                                     Content="{TemplateBinding SelectionBoxItem}"
                                                                     ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                     ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                                     Margin="8,0,24,0"
                                                                     VerticalAlignment="Center"
                                                                     HorizontalAlignment="Left"/>
                                                    <Popup x:Name="Popup"
                                                          Placement="Bottom"
                                                          IsOpen="{TemplateBinding IsDropDownOpen}"
                                                          AllowsTransparency="True"
                                                          Focusable="False"
                                                          PopupAnimation="Slide">
                                                        <Border Background="#2b2b2b"
                                                               BorderBrush="#3a3a3a"
                                                               BorderThickness="1"
                                                               CornerRadius="6"
                                                               Padding="4"
                                                               MinWidth="{TemplateBinding ActualWidth}">
                                                            <Border.Effect>
                                                                <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.5" Color="Black"/>
                                                            </Border.Effect>
                                                            <ItemsPresenter/>
                                                        </Border>
                                                    </Popup>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ComboBox.Style>
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                    <Setter Property="Padding" Value="12,8"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ComboBoxItem">
                                                <Border x:Name="border"
                                                       Background="{TemplateBinding Background}"
                                                       Padding="{TemplateBinding Padding}"
                                                       CornerRadius="4">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#3A3A3A"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="Transparent"/>
                                                        <Setter Property="Foreground" Value="#FFFFFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xe892;" FontFamily="{StaticResource MaterialIcons}" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="{Binding Color}"/>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="{Binding Name}" FontSize="12" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <!-- Private -->
                        <ToggleButton IsChecked="{Binding IsPrivate}" Style="{StaticResource EventToolbarToggleStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xe897;" FontFamily="{StaticResource MaterialIcons}" FontSize="16" Margin="0,0,6,0"/>
                                <TextBlock Text="Private" FontSize="12"/>
                            </StackPanel>
                        </ToggleButton>
                    </StackPanel>

                    <!-- Save Button -->
                    <Button Command="{Binding SaveEventCommand}"
                            Style="{StaticResource SaveButtonStyle}"
                            Width="80"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,24">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xe161;" FontFamily="{StaticResource MaterialIcons}" FontSize="16" Margin="0,0,6,0"/>
                            <TextBlock Text="Save" FontSize="13" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>

                    <!-- Title -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="&#xe25b;" FontFamily="{StaticResource MaterialIcons}"
                                   FontSize="20"
                                   Foreground="#0078D4"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"/>

                        <Grid Grid.Column="1">
                            <TextBox Text="{Binding EventTitle, UpdateSourceTrigger=PropertyChanged}"
                                     FontSize="15"
                                     Background="Transparent"
                                     Foreground="#EEEEEE"
                                     BorderThickness="0,0,0,1"
                                     BorderBrush="#3A3A3A"
                                     Padding="0,4"
                                     VerticalAlignment="Center"
                                     CaretBrush="#FFFFFF">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsFocused" Value="True">
                                                            <Setter Property="BorderBrush" Value="#0078D4"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <TextBlock Text="Add a title"
                                      Foreground="#666666"
                                      FontSize="15"
                                      Padding="0,4"
                                      IsHitTestVisible="False"
                                      VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding EventTitle}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Grid>

                    <!-- Invite attendees -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="&#xe7fd;" FontFamily="{StaticResource MaterialIcons}"
                                   FontSize="20"
                                   Foreground="#666666"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"/>

                        <Grid Grid.Column="1">
                            <TextBox Text="{Binding Attendees, UpdateSourceTrigger=PropertyChanged}"
                                     FontSize="13"
                                     Background="Transparent"
                                     Foreground="#EEEEEE"
                                     BorderThickness="0,0,0,1"
                                     BorderBrush="#3A3A3A"
                                     Padding="0,4"
                                     VerticalAlignment="Center"
                                     CaretBrush="#FFFFFF">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsFocused" Value="True">
                                                            <Setter Property="BorderBrush" Value="#0078D4"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <TextBlock Text="Invite attendees"
                                      Foreground="#666666"
                                      FontSize="13"
                                      Padding="0,4"
                                      IsHitTestVisible="False"
                                      VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Attendees}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                        <TextBlock Grid.Column="2"
                                   Text="Optional"
                                   FontSize="12"
                                   Foreground="#888888"
                                   VerticalAlignment="Center"
                                   Margin="12,0,0,0"/>
                    </Grid>

                    <!-- Date and Time Row -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Clock Icon -->
                        <TextBlock Grid.Column="0"
                                   Text="&#xe192;" FontFamily="{StaticResource MaterialIcons}"
                                   FontSize="20"
                                   Foreground="#666666"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"/>

                        <!-- Date Picker -->
                        <DatePicker Grid.Column="1"
                                   SelectedDate="{Binding EventDate}"
                                   Background="#252525"
                                   Foreground="#EEEEEE"
                                   BorderBrush="#3A3A3A"
                                   BorderThickness="1"
                                   Padding="8,6"
                                   FontSize="13"
                                   Margin="0,0,8,0">
                            <DatePicker.Resources>
                                <Style TargetType="DatePickerTextBox">
                                    <Setter Property="Foreground" Value="#EEEEEE"/>
                                    <Setter Property="Background" Value="#252525"/>
                                    <Setter Property="CaretBrush" Value="#FFFFFF"/>
                                </Style>
                            </DatePicker.Resources>
                        </DatePicker>

                        <!-- to label -->
                        <TextBlock Grid.Column="2"
                                   Text="to"
                                   FontSize="13"
                                   Foreground="#AAAAAA"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>

                        <!-- Start Time -->
                        <ComboBox Grid.Column="3"
                                 ItemsSource="{Binding TimeOptions}"
                                 SelectedItem="{Binding StartTime}"
                                 Style="{StaticResource DarkComboBoxStyle}"
                                 Margin="0,0,8,0"/>

                        <TextBlock Grid.Column="4"
                                   Text="to"
                                   FontSize="13"
                                   Foreground="#AAAAAA"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>

                        <!-- End Time -->
                        <ComboBox Grid.Column="5"
                                 ItemsSource="{Binding TimeOptions}"
                                 SelectedItem="{Binding EndTime}"
                                 Style="{StaticResource DarkComboBoxStyle}"
                                 Margin="0,0,12,0"/>

                        <!-- World Icon -->
                        <TextBlock Grid.Column="6"
                                   Text="&#xe894;" FontFamily="{StaticResource MaterialIcons}"
                                   FontSize="18"
                                   Foreground="#666666"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"/>

                        <!-- Make recurring -->
                        <Button Grid.Column="7"
                               Style="{StaticResource LinkButtonStyle}"
                               HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xe627;" FontFamily="{StaticResource MaterialIcons}" FontSize="16" Margin="0,0,6,0"/>
                                <TextBlock Text="Make recurring" FontSize="13"/>
                            </StackPanel>
                        </Button>

                        <!-- All day toggle -->
                        <StackPanel Grid.Column="8" Orientation="Horizontal" HorizontalAlignment="Right">
                            <ToggleButton IsChecked="{Binding IsAllDay}"
                                         Style="{StaticResource ModernToggleSwitchStyle}"
                                         Margin="0,0,8,0"/>
                            <TextBlock Text="All day"
                                       FontSize="13"
                                       Foreground="#CCCCCC"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <!-- Location -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="&#xe55f;" FontFamily="{StaticResource MaterialIcons}"
                                   FontSize="20"
                                   Foreground="#666666"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"/>

                        <Grid Grid.Column="1" Margin="0,0,12,0">
                            <TextBox Text="{Binding Location, UpdateSourceTrigger=PropertyChanged}"
                                     FontSize="13"
                                     Background="Transparent"
                                     Foreground="#EEEEEE"
                                     BorderThickness="0,0,0,1"
                                     BorderBrush="#3A3A3A"
                                     Padding="0,4"
                                     VerticalAlignment="Center"
                                     CaretBrush="#FFFFFF">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsFocused" Value="True">
                                                            <Setter Property="BorderBrush" Value="#0078D4"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <TextBlock Text="Search for a location"
                                      Foreground="#666666"
                                      FontSize="13"
                                      Padding="0,4"
                                      IsHitTestVisible="False"
                                      VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Location}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                        <!-- In-person event toggle -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <ToggleButton IsChecked="{Binding IsInPerson}"
                                         Style="{StaticResource ModernToggleSwitchStyle}"
                                         Margin="0,0,8,0"/>
                            <TextBlock Text="In-person event"
                                       FontSize="13"
                                       Foreground="#CCCCCC"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <!-- Description Area -->
                    <Border BorderBrush="#4A4A4A" BorderThickness="0,2,0,0" Padding="0,20,0,0" Margin="0,20,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Icon Header -->
                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                <TextBlock Text="&#xe24d;" FontFamily="{StaticResource MaterialIcons}"
                                           FontSize="20"
                                           Foreground="#666666"
                                           HorizontalAlignment="Left"/>
                            </Grid>

                            <!-- Editor Area with lighter background -->
                            <Border Grid.Row="1"
                                    Background="#202020"
                                    CornerRadius="4"
                                    Padding="12"
                                    MinHeight="180"
                                    Margin="0,0,0,0">
                                <Grid>
                                    <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                             AcceptsReturn="True"
                                             TextWrapping="Wrap"
                                             Background="Transparent"
                                             Foreground="#EEEEEE"
                                             BorderThickness="0"
                                             Padding="0"
                                             FontSize="13"
                                             CaretBrush="#FFFFFF"
                                             VerticalScrollBarVisibility="Auto">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="TextBox">
                                                            <ScrollViewer x:Name="PART_ContentHost"
                                                                         VerticalAlignment="Top"
                                                                         Padding="0"/>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                    <TextBlock Text="Add notes, links, or attachments"
                                              Foreground="#666666"
                                              FontSize="13"
                                              Padding="0"
                                              IsHitTestVisible="False"
                                              VerticalAlignment="Top">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Description}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>

                            <!-- Toolbar with darker background -->
                            <Border Grid.Row="2"
                                    Background="#181818"
                                    BorderBrush="#2A2A2A"
                                    BorderThickness="0,1,0,0"
                                    CornerRadius="0,0,4,4"
                                    Padding="8,10"
                                    Margin="0,8,0,0">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <Button ToolTip="Attach file" Margin="0,0,6,0">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="Width" Value="32"/>
                                                <Setter Property="Height" Value="32"/>
                                                <Setter Property="Cursor" Value="Hand"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="border"
                                                                    Background="{TemplateBinding Background}"
                                                                    CornerRadius="6"
                                                                    Padding="6">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="border" Property="Background" Value="#2A2A2A"/>
                                                                </Trigger>
                                                                <Trigger Property="IsPressed" Value="True">
                                                                    <Setter TargetName="border" Property="Background" Value="#333333"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                        <TextBlock Text="&#xe226;" FontFamily="{StaticResource MaterialIcons}" FontSize="18" Foreground="#888888"/>
                                    </Button>

                                    <Button ToolTip="Insert image" Margin="0,0,6,0">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="Width" Value="32"/>
                                                <Setter Property="Height" Value="32"/>
                                                <Setter Property="Cursor" Value="Hand"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="border"
                                                                    Background="{TemplateBinding Background}"
                                                                    CornerRadius="6"
                                                                    Padding="6">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="border" Property="Background" Value="#2A2A2A"/>
                                                                </Trigger>
                                                                <Trigger Property="IsPressed" Value="True">
                                                                    <Setter TargetName="border" Property="Background" Value="#333333"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                        <TextBlock Text="&#xe3f4;" FontFamily="{StaticResource MaterialIcons}" FontSize="18" Foreground="#888888"/>
                                    </Button>

                                    <Button ToolTip="Emoji" Margin="0,0,6,0">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="Width" Value="32"/>
                                                <Setter Property="Height" Value="32"/>
                                                <Setter Property="Cursor" Value="Hand"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="border"
                                                                    Background="{TemplateBinding Background}"
                                                                    CornerRadius="6"
                                                                    Padding="6">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="border" Property="Background" Value="#2A2A2A"/>
                                                                </Trigger>
                                                                <Trigger Property="IsPressed" Value="True">
                                                                    <Setter TargetName="border" Property="Background" Value="#333333"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                        <TextBlock Text="" FontSize="16" Foreground="#888888"/>
                                    </Button>

                                    <Button ToolTip="Drawing" Margin="0,0,6,0">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="Width" Value="32"/>
                                                <Setter Property="Height" Value="32"/>
                                                <Setter Property="Cursor" Value="Hand"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="border"
                                                                    Background="{TemplateBinding Background}"
                                                                    CornerRadius="6"
                                                                    Padding="6">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="border" Property="Background" Value="#2A2A2A"/>
                                                                </Trigger>
                                                                <Trigger Property="IsPressed" Value="True">
                                                                    <Setter TargetName="border" Property="Background" Value="#333333"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                        <TextBlock Text="&#xe3c9;" FontFamily="{StaticResource MaterialIcons}" FontSize="18" Foreground="#888888"/>
                                    </Button>

                                    <Button ToolTip="More" Margin="0,0,0,0">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="Width" Value="32"/>
                                                <Setter Property="Height" Value="32"/>
                                                <Setter Property="Cursor" Value="Hand"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="border"
                                                                    Background="{TemplateBinding Background}"
                                                                    CornerRadius="6"
                                                                    Padding="6">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="border" Property="Background" Value="#2A2A2A"/>
                                                                </Trigger>
                                                                <Trigger Property="IsPressed" Value="True">
                                                                    <Setter TargetName="border" Property="Background" Value="#333333"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                        <TextBlock Text="&#xe5d4;" FontFamily="{StaticResource MaterialIcons}" FontSize="18" Foreground="#888888"/>
                                    </Button>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- Right Panel - Calendar Preview -->
            <Border Grid.Column="1" Background="#252525" BorderBrush="#333333" BorderThickness="1,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Date Header -->
                    <Border Grid.Row="0" Background="#2A2A2A" Padding="12,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Style="{StaticResource IconButtonStyle}" Width="28" Height="28">
                                <TextBlock Text="&#xe5cb;" FontFamily="{StaticResource MaterialIcons}" FontSize="18" Foreground="#CCCCCC"/>
                            </Button>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Button Background="Transparent" BorderThickness="0" Padding="8,4" Cursor="Hand">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding EventDate, StringFormat='ddd, yyyy, MMM dd'}"
                                                   FontSize="13"
                                                   FontWeight="SemiBold"
                                                   Foreground="#FFFFFF"/>
                                        <TextBlock Text="&#xe5c5;" FontFamily="{StaticResource MaterialIcons}"
                                                   FontSize="16" Foreground="#CCCCCC" Margin="4,0,0,0"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <Button Grid.Column="2" Style="{StaticResource IconButtonStyle}" Width="28" Height="28">
                                <TextBlock Text="&#xe5cc;" FontFamily="{StaticResource MaterialIcons}" FontSize="18" Foreground="#CCCCCC"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Time Grid -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="12,8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Hours Column -->
                            <ItemsControl Grid.Row="1" Margin="0,0,0,0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <Canvas Height="960"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.Items>
                                    <!-- Hour markers from 8 to 17 (visible hours) -->
                                    <Grid Canvas.Top="0">
                                        <TextBlock Text="8" FontSize="11" Foreground="#666666" VerticalAlignment="Top" Margin="0,-6,0,0"/>
                                        <Rectangle Height="1" Fill="#333333" Margin="20,0,0,0" VerticalAlignment="Top"/>
                                    </Grid>
                                    <Grid Canvas.Top="40">
                                        <TextBlock Text="9" FontSize="11" Foreground="#666666" VerticalAlignment="Top" Margin="0,-6,0,0"/>
                                        <Rectangle Height="1" Fill="#333333" Margin="20,0,0,0" VerticalAlignment="Top"/>
                                    </Grid>
                                    <Grid Canvas.Top="80">
                                        <TextBlock Text="10" FontSize="11" Foreground="#666666" VerticalAlignment="Top" Margin="0,-6,0,0"/>
                                        <Rectangle Height="1" Fill="#333333" Margin="20,0,0,0" VerticalAlignment="Top"/>
                                    </Grid>
                                    <Grid Canvas.Top="120">
                                        <TextBlock Text="11" FontSize="11" Foreground="#666666" VerticalAlignment="Top" Margin="0,-6,0,0"/>
                                        <Rectangle Height="1" Fill="#333333" Margin="20,0,0,0" VerticalAlignment="Top"/>
                                    </Grid>
                                    <Grid Canvas.Top="160">
                                        <TextBlock Text="12" FontSize="11" Foreground="#666666" VerticalAlignment="Top" Margin="0,-6,0,0"/>
                                        <Rectangle Height="1" Fill="#333333" Margin="20,0,0,0" VerticalAlignment="Top"/>
                                    </Grid>
                                    <Grid Canvas.Top="200">
                                        <TextBlock Text="13" FontSize="11" Foreground="#666666" VerticalAlignment="Top" Margin="0,-6,0,0"/>
                                        <Rectangle Height="1" Fill="#333333" Margin="20,0,0,0" VerticalAlignment="Top"/>
                                    </Grid>
                                    <Grid Canvas.Top="240">
                                        <TextBlock Text="14" FontSize="11" Foreground="#666666" VerticalAlignment="Top" Margin="0,-6,0,0"/>
                                        <Rectangle Height="1" Fill="#333333" Margin="20,0,0,0" VerticalAlignment="Top"/>
                                    </Grid>
                                    <Grid Canvas.Top="280">
                                        <TextBlock Text="15" FontSize="11" Foreground="#666666" VerticalAlignment="Top" Margin="0,-6,0,0"/>
                                        <Rectangle Height="1" Fill="#333333" Margin="20,0,0,0" VerticalAlignment="Top"/>
                                    </Grid>
                                    <Grid Canvas.Top="320">
                                        <TextBlock Text="16" FontSize="11" Foreground="#666666" VerticalAlignment="Top" Margin="0,-6,0,0"/>
                                        <Rectangle Height="1" Fill="#333333" Margin="20,0,0,0" VerticalAlignment="Top"/>
                                    </Grid>
                                    <Grid Canvas.Top="360">
                                        <TextBlock Text="17" FontSize="11" Foreground="#666666" VerticalAlignment="Top" Margin="0,-6,0,0"/>
                                        <Rectangle Height="1" Fill="#333333" Margin="20,0,0,0" VerticalAlignment="Top"/>
                                    </Grid>
                                </ItemsControl.Items>
                            </ItemsControl>

                            <!-- Event Block -->
                            <Canvas Grid.Row="1" Margin="20,0,0,0">
                                <Border Canvas.Top="{Binding EventTopPosition}"
                                        Width="250"
                                        Height="{Binding EventHeight}"
                                        Background="#4CAF50"
                                        CornerRadius="4"
                                        Padding="8,6">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Top drag handle -->
                                        <Ellipse Grid.Row="0"
                                                Width="8" Height="8"
                                                Fill="#FFFFFF"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Top"
                                                Margin="0,-2,0,0"/>

                                        <!-- Time text -->
                                        <TextBlock Grid.Row="1"
                                                  Text="{Binding EventTimeRange}"
                                                  FontSize="12"
                                                  FontWeight="Medium"
                                                  Foreground="#FFFFFF"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>

                                        <!-- Bottom drag handle -->
                                        <Ellipse Grid.Row="1"
                                                Width="8" Height="8"
                                                Fill="#FFFFFF"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Bottom"
                                                Margin="0,0,0,-4"/>
                                    </Grid>
                                </Border>
                            </Canvas>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
