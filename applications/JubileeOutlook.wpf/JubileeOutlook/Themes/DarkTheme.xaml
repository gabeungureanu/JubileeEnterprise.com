    <!-- ============== MATERIAL ICON STYLES (now that brushes are defined) ============== -->

    <!-- Material Icon Text Style (Base) -->
    <Style x:Key="MaterialIconStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MaterialIcons}"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- Material Icon in Gold Color (for folder icons) -->
    <Style x:Key="MaterialIconGoldStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialIconStyle}">
        <Setter Property="Foreground" Value="{StaticResource GoldBrandBrush}"/>
    </Style>

    <!-- Material Icon in White Color -->
    <Style x:Key="MaterialIconWhiteStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialIconStyle}">
        <Setter Property="Foreground" Value="#FFFFFF"/>
    </Style>

    <!-- Material Icon Small (16px) -->
    <Style x:Key="MaterialIconSmallStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialIconStyle}">
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <!-- Material Icon Large (24px) -->
    <Style x:Key="MaterialIconLargeStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialIconStyle}">
        <Setter Property="FontSize" Value="24"/>
    </Style>

    <!-- Folder Tree Icon Style (Gold, 18px) -->
    <Style x:Key="FolderIconStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MaterialIcons}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Foreground" Value="{StaticResource GoldBrandBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,8,0"/>
    </Style>

    <!-- Ribbon Icon Style (White, 20px) -->
    <Style x:Key="RibbonIconStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MaterialIcons}"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
