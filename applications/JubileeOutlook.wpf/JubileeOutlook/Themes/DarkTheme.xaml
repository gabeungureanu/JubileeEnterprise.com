<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Color Palette - Outlook Black Theme -->
    <Color x:Key="PrimaryBackgroundColor">#000000</Color>
    <Color x:Key="SecondaryBackgroundColor">#000000</Color>
    <Color x:Key="TertiaryBackgroundColor">#1A1A1A</Color>
    <Color x:Key="HoverBackgroundColor">#2A2A2A</Color>
    <Color x:Key="SelectedBackgroundColor">#094771</Color>
    <Color x:Key="BorderColor">#333333</Color>

    <Color x:Key="PrimaryTextColor">#FFFFFF</Color>
    <Color x:Key="SecondaryTextColor">#CCCCCC</Color>
    <Color x:Key="DisabledTextColor">#808080</Color>

    <Color x:Key="AccentColor">#0078D4</Color>
    <Color x:Key="AccentHoverColor">#106EBE</Color>

    <Color x:Key="UnreadIndicatorColor">#0078D4</Color>
    <Color x:Key="FlaggedColor">#D13438</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{StaticResource PrimaryBackgroundColor}"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{StaticResource SecondaryBackgroundColor}"/>
    <SolidColorBrush x:Key="TertiaryBackgroundBrush" Color="{StaticResource TertiaryBackgroundColor}"/>
    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="{StaticResource HoverBackgroundColor}"/>
    <SolidColorBrush x:Key="SelectedBackgroundBrush" Color="{StaticResource SelectedBackgroundColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>

    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="{StaticResource DisabledTextColor}"/>

    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource AccentHoverColor}"/>

    <SolidColorBrush x:Key="UnreadIndicatorBrush" Color="{StaticResource UnreadIndicatorColor}"/>
    <SolidColorBrush x:Key="FlaggedBrush" Color="{StaticResource FlaggedColor}"/>

    <!-- Font Sizes -->
    <system:Double xmlns:system="clr-namespace:System;assembly=mscorlib" x:Key="HeaderFontSize">16</system:Double>
    <system:Double xmlns:system="clr-namespace:System;assembly=mscorlib" x:Key="SubHeaderFontSize">14</system:Double>
    <system:Double xmlns:system="clr-namespace:System;assembly=mscorlib" x:Key="BodyFontSize">12</system:Double>
    <system:Double xmlns:system="clr-namespace:System;assembly=mscorlib" x:Key="SmallFontSize">10</system:Double>

    <!-- Button Style -->
    <Style x:Key="OutlookButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource SecondaryBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="FontSize" Value="{StaticResource BodyFontSize}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="2">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                        Margin="{TemplateBinding Padding}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource HoverBackgroundBrush}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource SelectedBackgroundBrush}"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Foreground" Value="{StaticResource DisabledTextBrush}"/>
                <Setter Property="Opacity" Value="0.5"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- TextBox Style -->
    <Style x:Key="OutlookTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource TertiaryBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="FontSize" Value="{StaticResource BodyFontSize}"/>
        <Setter Property="CaretBrush" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>

    <!-- ListBox Style -->
    <Style x:Key="OutlookListBoxStyle" TargetType="ListBox">
        <Setter Property="Background" Value="{StaticResource PrimaryBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <!-- ListBoxItem Style -->
    <Style x:Key="OutlookListBoxItemStyle" TargetType="ListBoxItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border Background="{TemplateBinding Background}"
                            BorderThickness="0"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource HoverBackgroundBrush}"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{StaticResource SelectedBackgroundBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- TreeView Style -->
    <Style x:Key="OutlookTreeViewStyle" TargetType="TreeView">
        <Setter Property="Background" Value="{StaticResource SecondaryBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <!-- TreeViewItem Style -->
    <Style x:Key="OutlookTreeViewItemStyle" TargetType="TreeViewItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="Padding" Value="4"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource HoverBackgroundBrush}"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{StaticResource SelectedBackgroundBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Separator Style -->
    <Style x:Key="OutlookSeparatorStyle" TargetType="Separator">
        <Setter Property="Background" Value="{StaticResource BorderBrush}"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <!-- ScrollBar Styles -->
    <Style x:Key="ScrollBarThumbStyle" TargetType="Thumb">
        <Setter Property="Background" Value="#686868"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Border Background="{TemplateBinding Background}" CornerRadius="4"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#9E9E9E"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="ScrollBar">
        <Setter Property="Background" Value="{StaticResource SecondaryBackgroundBrush}"/>
    </Style>

    <!-- Fluent Ribbon Black Theme Styling - Comprehensive Override -->

    <!-- Base Colors -->
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.AccentBaseColorBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.HighlightBrush" Color="{StaticResource HoverBackgroundColor}"/>

    <!-- Main Ribbon Backgrounds - ALL BLACK -->
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.RibbonBackgroundBrush" Color="#000000"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.Ribbon.Background" Color="#000000"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.RibbonWindow.TitleBar.Background" Color="#000000"/>

    <!-- Ribbon Tab Control Background -->
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.RibbonTabControl.Background" Color="#000000"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.RibbonTabControl.Content.Background" Color="#000000"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.RibbonTabControl.ContentGapHeight.Background" Color="#000000"/>

    <!-- Ribbon Tab Item Backgrounds -->
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.RibbonTabItem.Background" Color="#000000"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.RibbonTabItem.Foreground" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.RibbonTabItem.Active.Background" Color="#000000"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.RibbonTabItem.Selected.Background" Color="#000000"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.RibbonTabItem.Selected.Foreground" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.RibbonTabItem.MouseOver.Background" Color="{StaticResource HoverBackgroundColor}"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.RibbonTabItem.MouseOver.Foreground" Color="{StaticResource PrimaryTextColor}"/>

    <!-- Ribbon Toolbar Background -->
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.RibbonToolBar.Background" Color="#000000"/>

    <!-- Group Box Backgrounds -->
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.RibbonGroupBox.Background" Color="#000000"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.RibbonGroupBox.Foreground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.RibbonGroupBox.DropDownBorder" Color="{StaticResource BorderColor}"/>

    <!-- Group Separator -->
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.GroupSeparator.Background" Color="{StaticResource BorderColor}"/>

    <!-- Buttons - ALL TEXT WHITE -->
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.Button.Background" Color="Transparent"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.Button.Foreground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.Button.MouseOver.Background" Color="{StaticResource HoverBackgroundColor}"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.Button.MouseOver.BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.Button.MouseOver.Foreground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.Button.Pressed.Background" Color="{StaticResource SelectedBackgroundColor}"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.Button.Pressed.BorderBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.Button.Pressed.Foreground" Color="#FFFFFF"/>

    <!-- Toggle Button -->
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.ToggleButton.Background" Color="Transparent"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.ToggleButton.Foreground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.ToggleButton.MouseOver.Background" Color="{StaticResource HoverBackgroundColor}"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.ToggleButton.MouseOver.Foreground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.ToggleButton.Pressed.Background" Color="{StaticResource SelectedBackgroundColor}"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.ToggleButton.Pressed.Foreground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.ToggleButton.Checked.Background" Color="{StaticResource SelectedBackgroundColor}"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.ToggleButton.Checked.Foreground" Color="#FFFFFF"/>

    <!-- SplitButton -->
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.SplitButton.Foreground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.SplitButton.MouseOver.Foreground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.SplitButton.Pressed.Foreground" Color="#FFFFFF"/>

    <!-- Menu and DropDown -->
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.DropDown.Background" Color="#000000"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.DropDown.BorderBrush" Color="{StaticResource BorderColor}"/>

    <!-- Text and Labels - ALL WHITE -->
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.LabelTextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.WindowTitleForeground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.TextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.IdealForegroundColorBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.Gray1" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.Gray2" Color="#FFFFFF"/>

    <!-- Separators -->
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.Separator.Background" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.Separator.BorderBrush" Color="{StaticResource BorderColor}"/>

    <!-- Border Brushes -->
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.Control.BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.WindowBorderBrush" Color="{StaticResource BorderColor}"/>

</ResourceDictionary>
