                            <Setter TargetName="border" Property="Background" Value="#2A2A2A"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource GoldBrandBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- WWBW Account Root TreeViewItem Style -->
    <Style x:Key="WwbwAccountTreeViewItemStyle" TargetType="TreeViewItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource GoldBrandBrush}"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="IsExpanded" Value="True"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource HoverBackgroundBrush}"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{StaticResource SelectedBackgroundBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Folder Search TextBox Style -->
    <Style x:Key="FolderSearchTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource OutlookTextBoxStyle}">
        <Setter Property="Background" Value="#1A1A1A"/>
        <Setter Property="BorderBrush" Value="#444444"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="28,8,8,8"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

