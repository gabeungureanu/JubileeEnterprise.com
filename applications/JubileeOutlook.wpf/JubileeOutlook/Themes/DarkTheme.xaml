    <!-- Font Sizes -->
    <system:Double x:Key="HeaderFontSize">16</system:Double>
    <system:Double x:Key="SubHeaderFontSize">14</system:Double>
    <system:Double x:Key="BodyFontSize">12</system:Double>
    <system:Double x:Key="SmallFontSize">10</system:Double>
    <system:Double x:Key="IconFontSize">20</system:Double>
    <system:Double x:Key="IconFontSizeSmall">16</system:Double>
    <system:Double x:Key="IconFontSizeLarge">24</system:Double>

    <!-- ============== MATERIAL ICON STYLES (now that brushes are defined) ============== -->

    <!-- Material Icon Text Style (Base) -->
    <Style x:Key="MaterialIconStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MaterialIcons}"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- Material Icon in Gold Color (for folder icons) -->
    <Style x:Key="MaterialIconGoldStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialIconStyle}">
        <Setter Property="Foreground" Value="{StaticResource GoldBrandBrush}"/>
    </Style>

    <!-- Material Icon in White Color -->
    <Style x:Key="MaterialIconWhiteStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialIconStyle}">
        <Setter Property="Foreground" Value="#FFFFFF"/>
    </Style>

    <!-- Material Icon Small (16px) -->
    <Style x:Key="MaterialIconSmallStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialIconStyle}">
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <!-- Material Icon Large (24px) -->
    <Style x:Key="MaterialIconLargeStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialIconStyle}">
        <Setter Property="FontSize" Value="24"/>
    </Style>

    <!-- Folder Tree Icon Style (Gold, 18px) -->
    <Style x:Key="FolderIconStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MaterialIcons}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Foreground" Value="{StaticResource GoldBrandBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,8,0"/>
    </Style>

    <!-- Ribbon Icon Style (White, 20px) -->
    <Style x:Key="RibbonIconStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MaterialIcons}"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- Navigation Rail Icon Style (24px) -->
    <Style x:Key="NavRailIconStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MaterialIcons}"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="Foreground" Value="#888888"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- ============== CONTROL STYLES ============== -->

    <!-- Button Style -->
    <Style x:Key="OutlookButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource SecondaryBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource BodyFontSize}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="2">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                        Margin="{TemplateBinding Padding}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource HoverBackgroundBrush}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource SelectedBackgroundBrush}"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Foreground" Value="{StaticResource DisabledTextBrush}"/>
                <Setter Property="Opacity" Value="0.5"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- TextBox Style -->
    <Style x:Key="OutlookTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource TertiaryBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource BodyFontSize}"/>
        <Setter Property="CaretBrush" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>

    <!-- ListBox Style -->
    <Style x:Key="OutlookListBoxStyle" TargetType="ListBox">
        <Setter Property="Background" Value="{StaticResource PrimaryBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <!-- ListBoxItem Style -->
    <Style x:Key="OutlookListBoxItemStyle" TargetType="ListBoxItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border Background="{TemplateBinding Background}"
                            BorderThickness="0"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource HoverBackgroundBrush}"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{StaticResource SelectedBackgroundBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- TreeView Style -->
    <Style x:Key="OutlookTreeViewStyle" TargetType="TreeView">
        <Setter Property="Background" Value="{StaticResource SecondaryBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <!-- TreeViewItem Style -->
    <Style x:Key="OutlookTreeViewItemStyle" TargetType="TreeViewItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="Padding" Value="4"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource HoverBackgroundBrush}"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{StaticResource SelectedBackgroundBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Separator Style -->
    <Style x:Key="OutlookSeparatorStyle" TargetType="Separator">
        <Setter Property="Background" Value="{StaticResource BorderBrush}"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <!-- ScrollBar Styles -->
    <Style x:Key="ScrollBarThumbStyle" TargetType="Thumb">
        <Setter Property="Background" Value="#686868"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Border Background="{TemplateBinding Background}" CornerRadius="4"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#9E9E9E"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="ScrollBar">
        <Setter Property="Background" Value="{StaticResource SecondaryBackgroundBrush}"/>
    </Style>

