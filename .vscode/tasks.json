{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install All Dependencies",
      "type": "shell",
      "command": "npm install",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Build Shared Packages",
      "type": "shell",
      "command": "npm run build",
      "options": {
        "cwd": "${workspaceFolder}/packages/shared"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Start Infrastructure (Docker)",
      "type": "shell",
      "command": "docker-compose -f infrastructure/docker/docker-compose.services.yml up -d",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Stop Infrastructure (Docker)",
      "type": "shell",
      "command": "docker-compose -f infrastructure/docker/docker-compose.services.yml down",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Dev: JubileeBrowser.com",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/websites/JubileeBrowser.com"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Dev: JubileeIntelligence.com",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/websites/JubileeIntelligence.com"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Dev: JubileeInternet.com",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/websites/JubileeInternet.com"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Dev: JubileePersonas.com",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/websites/JubileePersonas.com"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Dev: JubileeVerse.com",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/websites/JubileeVerse.com"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Dev: JubileeWebsites.com",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/websites/JubileeWebsites.com"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "build-wpf",
      "type": "shell",
      "command": "dotnet build",
      "options": {
        "cwd": "${workspaceFolder}/applications/JubileeBrowser.wpf"
      },
      "group": "build",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Test All",
      "type": "shell",
      "command": "npm run test",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Lint All",
      "type": "shell",
      "command": "npm run lint",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
